# zsh-newuser-install
HISTFILE=$HOME/.histfile
HISTSIZE=1000
SAVEHIST=1000
setopt extendedglob
bindkey -e

# compinstall
zstyle :compinstall filename '/home/eric/.zshrc'
autoload -Uz compinit
compinit

# Exports
export PATH="$PATH:$HOME/.cargo/bin:$HOME/.dotnet:$HOME/.dotnet/tools"
export EDITOR=nvim
export GAMEMODERUNEXEC="__NV_PRIME_RENDER_OFFLOAD=1 __VK_LAYER_NV_optimus=NVIDIA_only __GLX_VENDOR_LIBRARY_NAME=nvidia"
export DOTNET_ROOT=$HOME/.dotnet

# Syntax highlighting and autosuggestions
source /usr/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source /usr/share/zsh-autosuggestions/zsh-autosuggestions.zsh

# Aliases
source $HOME/.aliases

# pipx
eval "$(register-python-argcomplete pipx)"

# Atuin
eval "$(atuin init zsh)"

# rbenv
eval "$(rbenv init - zsh)"

# Starship
eval "$(starship init zsh)"
